<Page x:Class="Index_Prototype.Pages.Teacher_Login.TeacherLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:fa="http://schemas.fontawesome.com/icons/svg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherLogin">

    <Grid >
        <Border BorderBrush="Black" HorizontalAlignment="Center" Height="326" VerticalAlignment="Center" Width="290" CornerRadius="10,10,10,10">
            <Border.Effect>
                <DropShadowEffect Direction="275" Opacity="0.345" ShadowDepth="3" BlurRadius="11" />
            </Border.Effect>
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </Border.Background>
            <DockPanel>


                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="0,0,0,30">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="15,10,15,10" Style="{DynamicResource RoundCorner}" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                            <fa:SvgAwesome Icon="Solid_RightFromBracket" Width="18" Margin="0,0,5,0" VerticalAlignment="Center" />
                            <TextBlock Text="Login" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock TextWrapping="Wrap" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top"><Run FontWeight="Bold" Text="Welcome"/></TextBlock>
                    <TextBlock TextWrapping="Wrap" Text="Teacher Name" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Password" FontSize="10" Padding="0,0,0,0"/>
                        <PasswordBox FontSize="14" Width="196"/>
                    </StackPanel>

                </StackPanel>
            </DockPanel>
        </Border>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="30" Style="{DynamicResource RoundCorner}"  Margin="10,10,0,0">
            <fa:SvgAwesome Icon="Solid_ArrowLeft" VerticalAlignment="Center" Height="20" Width="20" HorizontalAlignment="Center" />
        </Button>
        
    </Grid>
</Page>
