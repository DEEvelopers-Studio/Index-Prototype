<Window x:Class="Index_Prototype.Pages.Teacher.ChangePassword.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Index_Prototype.Pages.Teacher.ChangePassword"
        mc:Ignorable="d"
        Title="ChangePassword" Height="208" Width="293">
	<Grid>
		<PasswordBox x:Name="oldPwBox" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" Width="259"/>
		<TextBlock HorizontalAlignment="Left" Margin="17,10,0,0" TextWrapping="Wrap" Text="Old Password" VerticalAlignment="Top"/>
		<PasswordBox x:Name="newPwBox" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Width="259"/>
		<TextBlock HorizontalAlignment="Left" Margin="17,54,0,0" TextWrapping="Wrap" Text="New Password" VerticalAlignment="Top"/>
		<PasswordBox x:Name="confNewPwBox" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Width="259"/>
		<TextBlock HorizontalAlignment="Left" Margin="17,100,0,0" TextWrapping="Wrap" Text="Confirm New Password" VerticalAlignment="Top"/>
		<Button Content="Change Password" HorizontalAlignment="Right" Height="24" Margin="0,0,17,10" VerticalAlignment="Bottom" Width="117" Click="Button_Click_1"/>

	</Grid>
</Window>
